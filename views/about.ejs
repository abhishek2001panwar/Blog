<script>
    // GSAP Animations
    gsap.from("#team-members", {
        duration: 1,
        opacity: 0,
        y: 50,
        ease: "power2.out",
        scrollTrigger: {
            trigger: "#team-members",
            start: "top bottom-=100",
        }
    });

    gsap.from(".container", {
        duration: 1,
        opacity: 0,
        y: 50,
        ease: "power2.out",
