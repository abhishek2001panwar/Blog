            </div>
         <%   }) %>

       
            
            
          </div>
        </div>
      </section> 
      <script>
        const Added = "Added";
    </script>
      <script>
        //         ScrollReveal().reveal('#blogSection .p-4', { duration: 1000, delay: 200, distance: '50px', origin: 'bottom', easing: 'ease-in-out' });

       document.querySelectorAll("#bookmark").forEach(function(bookmark) {
        bookmark.addEventListener("click", function(event) {
            event.preventDefault(); // Prevent the default behavior of the anchor element
            const addedElement = this.parentElement.querySelector("#added");
            addedElement.innerHTML = Added;
        });
    });
    ScrollReveal().reveal('#blogSection .p-4', {
            duration: 1000,
            delay: 200,
            distance: '50px',
            origin: 'bottom',
            easing: 'ease-in-out'
        });
    </script>
