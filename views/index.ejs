    <script>
        // Get the mouse follower element
        const mouseFollower = document.getElementById('mouseFollower');
    
        // Listen for mouse movement on the document
        document.addEventListener('mousemove', (event) => {
            // Update the position of the mouse follower to match the mouse cursor
            gsap.to(mouseFollower, {
                x: event.clientX,
                y: event.clientY,
                duration: 0.3,
                ease: 'power2.out'
            });
        });
    </script>
    
