    <style>
        body {
            margin: 0;
            font-family: 'Dancing Script', cursive;
            background-color: #f0ebeb; /* Dark background color */
            color: #2cb1c9; /* Light text color */
        }

        nav {
            padding: 15px;
            background-color: #111313; /* Dark navbar background color */
            text-align: center;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            margin: 0 15px;
        }
        nav a:hover {
            border-bottom: 2px solid #eb2309; /* Green underline color on hover */
        }
       
        @keyframes fadeInUp {
            to {
                opacity: 2;
                transform: translateY(0);
            }
        }


#algn{
    height: 92vh;
    min-height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
}

#card{
    width: 370px;
    height: 435px;
    border: none;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 8px 0 #8a8d91, 0 6px 20px 0 #E7E9EB;
}

#upper-bg{
    width: 100%;
    height: 35%;
    background-color: #2cb1c9;
    display: flex;
    justify-content: center;
    position: relative;
}

.profile-pic{
    width: 30%;
    background-color: rgb(38, 187, 197);
    border: 3px solid #42adc0;
    border-radius: 50%;
    padding: 3px;
    position: absolute;
    top: 10px;
}

#lower-bg{
    width: 100%;
    height: 65%;
}

.text{
    text-align: center;
    padding-top: 35px;
    font-size: larger;
    font-weight: bold;
}

.text .name{
   
    padding: 0;
    margin: 5px;
    color: black;

}

.text .title{
    padding: 0;
    margin: 0;
    font-size: 15px;
    color: black;
    
}

#icons{
    display: flex;
    justify-content: center;
    margin: 15px;
}

#icons img{
    width: 80%;
    height: 90%;
}

.ico{
    display: flex;
    justify-content: center;
    align-items: center;
}

#btn{
    display: flex;
    justify-content: center;
    margin: 15px;
    
}

#btn button{
    margin: 0 15px;
    padding: 10px 25px;
    background-color: #2cb1c9;
    border: none;
    border-radius: 50px;
    font-weight: 700;
    font-family: "dancing script";
}
#addProfile{
    background-color: #2cb1c9;
    border: none;
    border-radius: 50px;
    font-weight: 700;
    font-family: "dancing script";
}
#addprofile{
    box-shadow: 0 4px 8px 0 #7c8085, 0 6px 20px 0 #E7E9EB;

}
#btn button:hover{
    box-shadow: 0 4px 8px 0 #7c8085, 0 6px 20px 0 #E7E9EB;
}

#l-c-s{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 20px 10px;
}

#l-c-s .num{
    display: flex;
}

#l-c-s .dvr{
    width: 2px;
    height: 25px;
    background-color: gray;
}

#l-c-s img{
    width: 24px;
    height: 24px;
}

.license{
    font-size: 12px;
    text-align: center;
}

.license .ll{
    padding: 0 10px;
    display: inline;
}
    </style>
</head>
